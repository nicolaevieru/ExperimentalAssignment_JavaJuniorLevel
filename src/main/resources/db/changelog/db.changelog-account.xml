<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
	<changeSet author="dragos.slujeru" id="createAccountTable">
		<createTable tableName="ACCOUNT">
			<column name="id" type="int">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="USER_PK" /> 
			</column>
			<column name="firstName" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="lastName" type="varchar2(255)">
				<constraints nullable="false"/>
			</column>
			<column name="email" type="varchar2(100)">
				<constraints nullable="false"/>
			</column>
			<column name="typeId" type="int">
				<constraints references="ACCOUNT_TYPE(id)" foreignKeyName="ACCOUNT_TYPE_FK" unique="true" nullable="false"/>
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>